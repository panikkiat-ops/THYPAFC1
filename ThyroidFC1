        let currentCardIndex = 0;
        let isFlipped = false;

        const flashcardElem = document.getElementById('flashcard');
        const flashcardFront = document.getElementById('flashcard-front');
        const flashcardBack = document.getElementById('flashcard-back');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const shuffleBtn = document.getElementById('shuffle-btn');
        const cardCounter = document.getElementById('card-counter');

        function updateCardDisplay() {
            const card = flashcards[currentCardIndex];
            flashcardFront.textContent = card.question;
            flashcardBack.textContent = card.answer;
            cardCounter.textContent = `${currentCardIndex + 1} / ${flashcards.length}`;
            if (isFlipped) {
                flashcardElem.classList.add('flipped');
            } else {
                flashcardElem.classList.remove('flipped');
            }
        }

        function flipCard() {
            isFlipped = !isFlipped;
            updateCardDisplay();
        }

        function showNextCard() {
            isFlipped = false; // Reset flip state for new card
            currentCardIndex = (currentCardIndex + 1) % flashcards.length;
            updateCardDisplay();
        }

        function showPrevCard() {
            isFlipped = false; // Reset flip state for new card
            currentCardIndex = (currentCardIndex - 1 + flashcards.length) % flashcards.length;
            updateCardDisplay();
        }

        function shuffleCards() {
            isFlipped = false; // Reset flip state
            for (let i = flashcards.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [flashcards[i], flashcards[j]] = [flashcards[j], flashcards[i]]; // ES6 swap
            }
            currentCardIndex = 0; // Start from the beginning of the shuffled deck
            updateCardDisplay();
        }

        // Event Listeners
        flashcardElem.addEventListener('click', flipCard);
        nextBtn.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent card from flipping when button is clicked
            showNextCard();
        });
        prevBtn.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent card from flipping when button is clicked
            showPrevCard();
        });
        shuffleBtn.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent card from flipping when button is clicked
            shuffleCards();
        });

        // Initialize the first card
        window.onload = updateCardDisplay;

    </script>
</body>
</html>
